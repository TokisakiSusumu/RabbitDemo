@page "/admin"
@rendermode InteractiveServer

<PageTitle>Admin</PageTitle>

<h1>Admin Dashboard</h1>

<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="alert alert-info">
            <strong>Welcome Admin!</strong> This page is only visible to users with the Admin role.
        </div>
        <p>You have administrative access to the system.</p>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-danger">
            <strong>Access Denied.</strong> You need Admin role to view this page.
        </div>
    </NotAuthorized>
</AuthorizeView>