@page "/example"
@using Microsoft.AspNetCore.Authorization
@using Shared.Auth
@using BlazorApp1.Client.Services
@rendermode InteractiveAuto
@attribute [Authorize]
@inject IApiClient ApiClient

<PageTitle>Profile (InteractiveAuto)</PageTitle>

<h1>Profile</h1>

<p>This page demonstrates <strong>authenticated API calls</strong> using the BFF pattern.</p>
<p>Current render location: <strong>@_renderLocation</strong></p>

@if (_loading)
{
    <div class="alert alert-info">
        <span class="spinner-border spinner-border-sm me-2"></span>
        Loading profile...
    </div>
}
else if (_error != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @_error
        <br /><small>You may need to log in again.</small>
    </div>
}
else if (_userInfo != null)
{
    <div class="card" style="max-width: 500px;">
        <div class="card-header">
            <strong>User Information (from WebApi via @(_renderLocation == "WebAssembly" ? "BFF" : "direct JWT"))</strong>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @_userInfo.Email</p>
            <p><strong>First Name:</strong> @(_userInfo.FirstName ?? "Not set")</p>
            <p><strong>Last Name:</strong> @(_userInfo.LastName ?? "Not set")</p>
            <p><strong>Roles:</strong></p>
            <ul>
                @foreach (var role in _userInfo.Roles)
                {
                    <li>@role</li>
                }
            </ul>
        </div>
        <div class="card-footer text-muted">
            <small>Rendered in @_renderLocation mode | Fetched at @_fetchTime?.ToString("HH:mm:ss") UTC</small>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-secondary" @onclick="RefreshData">
            Refresh from API
        </button>
    </div>
}

<div class="mt-4">
    <h5>How It Works:</h5>
    <ul>
        <li><strong>Server mode:</strong> Calls WebApi directly with JWT from server-side token cache</li>
        <li><strong>WASM mode:</strong> Calls BFF endpoint → Blazor Server → WebApi (cookie + JWT)</li>
        <li>Token refresh happens automatically on the server, invisible to this page</li>
    </ul>
</div>

@code {
    private UserInfo? _userInfo;
    private string? _error;
    private bool _loading = true;
    private string _renderLocation = "Unknown";
    private DateTime? _fetchTime;

    protected override async Task OnInitializedAsync()
    {
        _renderLocation = OperatingSystem.IsBrowser() ? "WebAssembly" : "Server";
        Console.WriteLine($"[{_renderLocation.ToUpper()}] Example page loaded");
        await LoadUserInfo();
    }

    private async Task LoadUserInfo()
    {
        _loading = true;
        _error = null;
        StateHasChanged();

        try
        {
            _userInfo = await ApiClient.GetMyInfoAsync();
            _fetchTime = DateTime.UtcNow;

            if (_userInfo == null)
            {
                _error = "Failed to load profile. Token may be expired.";
                Console.WriteLine($"[{_renderLocation.ToUpper()}] Example: null response");
            }
            else
            {
                Console.WriteLine($"[{_renderLocation.ToUpper()}] Example: loaded {_userInfo.Email}");
            }
        }
        catch (Exception ex)
        {
            _error = $"Error: {ex.Message}";
            Console.WriteLine($"[{_renderLocation.ToUpper()}] Example: {ex.Message}");
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData() => await LoadUserInfo();
}
