@page "/example"
@using Microsoft.AspNetCore.Authorization
@using Shared.Auth
@rendermode InteractiveServer
@attribute [Authorize]
@inject BlazorApp1.Services.IAuthService AuthService

<PageTitle>Profile</PageTitle>

<h1>Profile</h1>

<p>This page demonstrates <strong>authenticated API calls</strong> to the WebApi backend.</p>

@if (_loading)
{
    <div class="alert alert-info">
        <span class="spinner-border spinner-border-sm me-2"></span>
        Loading profile from WebApi...
    </div>
}
else if (_error != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @_error
        <br /><small>You may need to log in again.</small>
    </div>
}
else if (_userInfo != null)
{
    <div class="card" style="max-width: 500px;">
        <div class="card-header">
            <strong>User Information (from WebApi)</strong>
        </div>
        <div class="card-body">
            <p><strong>Email:</strong> @_userInfo.Email</p>
            <p><strong>First Name:</strong> @(_userInfo.FirstName ?? "Not set")</p>
            <p><strong>Last Name:</strong> @(_userInfo.LastName ?? "Not set")</p>
            <p><strong>Roles:</strong></p>
            <ul>
                @foreach (var role in _userInfo.Roles)
                {
                    <li>@role</li>
                }
            </ul>
        </div>
        <div class="card-footer text-muted">
            <small>This data was fetched from WebApi using your JWT token</small>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-secondary" @onclick="RefreshData">
            Refresh from API
        </button>
    </div>
}

<div class="mt-4">
    <h5>How Token Refresh Works:</h5>
    <ol>
        <li>Your access token expires every <strong>15 minutes</strong></li>
        <li>When you make an API call and token is about to expire (within 5 min), it auto-refreshes</li>
        <li>Your refresh token lasts <strong>7 days</strong></li>
        <li>If refresh token expires, you must log in again</li>
        <li>Each refresh creates a new refresh token (token rotation)</li>
    </ol>
</div>

@code {
    private UserInfo? _userInfo;
    private string? _error;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine(">>> [SERVER] Profile.OnInitializedAsync: Loading user info from WebApi");
        await LoadUserInfo();
    }

    private async Task LoadUserInfo()
    {
        _loading = true;
        _error = null;
        StateHasChanged();

        try
        {
            // This call uses the JWT stored in your cookie!
            _userInfo = await AuthService.GetAsync<UserInfo>("api/auth/me");

            if (_userInfo == null)
            {
                _error = "Failed to load profile. Token may be expired.";
                Console.WriteLine(">>> [SERVER] Profile: Failed to load user info");
            }
            else
            {
                Console.WriteLine($">>> [SERVER] Profile: Loaded {_userInfo.Email}");
            }
        }
        catch (Exception ex)
        {
            _error = $"Error: {ex.Message}";
            Console.WriteLine($">>> [SERVER] Profile: Exception - {ex.Message}");
        }
        finally
        {
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData()
    {
        await LoadUserInfo();
    }
}
